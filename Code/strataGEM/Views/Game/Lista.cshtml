@model IEnumerable<strataGEM.Models.Game>

@{
    ViewBag.Title = "Lista";
}
<body style="height: auto">
    <div class="container body-content">
        <h2>Lista De Juegos</h2>

        <table class="table">
            <tr>
                <th>
                    <font color="#B57EDC">
                        Titulo
                    </font>
                </th>
                <th>
                    <font color="#B57EDC">
                        Descripcion
                    </font>
                </th>
                <th>
                    <font color="#B57EDC">
                        Reviews
                    </font>
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <font color="white">
                            @Html.DisplayFor(modelItem => item.Game_Name)
                        </font>
                    </td>
                    <td>
                        <font color="white">
                            @Html.DisplayFor(modelItem => item.Game_Description)
                        </font>
                    </td>
                    <td>

                        <div class="blog-text text-box text-white" style="">
                            <a href=@Url.Action("IndexRev", "Review", new { id = item.Game_Id})> Ver Reviews <img src="~/Assets/img/icons/double-arrow.png" alt="#" /></a>
                        </div>
                    </td>
                </tr>
            }
        </table>
    </div>
</body>